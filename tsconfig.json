{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "importHelpers": true,
    "isolatedModules": false,
    "jsx": "react",
    "strict": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "declaration": false,
    "skipLibCheck": true,
    "sourceMap": false,
    "removeComments": true,
    "noLib": false,
    "preserveConstEnums": false,
    "noImplicitAny": false,
    "lib": ["es2015", "es6", "dom"],
    "types": ["node"]
  },
  "include": ["./source"]
}
